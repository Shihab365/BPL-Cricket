<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bplt20cricket2019.asus.bplt20application.PlayerListActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <Button
                    android:padding="5dp"
                    android:id="@+id/dhkid"
                    android:background="@drawable/dhkgr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ডাকা ডাইনামাইটস"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/dhk"
            />
            <Button
                    android:padding="5dp"
                    android:id="@+id/comid"
                    android:background="@drawable/comgr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="কুমিল্লা ভিক্টরিয়ান্স"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/comi"
            />
            <Button
                    android:padding="5dp"
                    android:id="@+id/rngid"
                    android:background="@drawable/rangr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="রংপুর রাইডার্স"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/rang"
            />
            <Button
                    android:padding="5dp"
                    android:id="@+id/sylid"
                    android:background="@drawable/sylgr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="সিলেট সিক্সার্স"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/syl"
            />
            <Button
                    android:padding="5dp"
                    android:id="@+id/ctgid"
                    android:background="@drawable/ctggr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="চিটাগাং ভাইকিংস"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/ctg"
            />
            <Button
                    android:padding="5dp"
                    android:id="@+id/rajid"
                    android:background="@drawable/rajgr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="রাজশাহী কিংস"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/raj"
            />
            <Button
                    android:padding="5dp"
                    android:id="@+id/titid"
                    android:background="@drawable/khlgr"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="খুলনা টাইটানস"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:drawableLeft="@drawable/tit"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
